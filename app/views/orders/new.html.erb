<h2>購入手続き</h2>

<%= form_with(model: @order, local: true, url: confirm_orders_path, method: :get) do |form| %>

  <p>商品名:<%= @book.title %></p>

  <div class="field">
    <%= form.label :個数 %></br>
    <%= form.text_field :count %>
  </div>

  <div class="field">
    <%= form.label :お届け先住所 %></br>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.hidden_field :book_id, value: @book.id %>
  </div>

  <div class="actions">
    <%= form.submit "注文確認へ" %>
  </div>

<% end %>