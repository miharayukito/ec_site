<%# end %>

  <div class="field">
    <%= form.hidden_field :count, value: @current_cart.total_number %>
  </div>

  <% @line_items.each do |line_item| %>
    <% book = line_item.book %>
    <div>
      <p>商品:<%= book.title %></p>
      <p>個数:<%= line_item.quantity %>冊</p>
      <p>値段:
        <%= line_item.total_price_book %>
        <span>円 (税込)</span>
      </p>
      <br>
    </div>
  <% end %>
  
  <div>
    <p>--------------------------</p>
    <p>合計冊数: <%= @current_cart.total_number %><span>冊</span></p>
    <p>合計価格:
      <%= @current_cart.total_price %>
      <span>円 (税込)</span>
    </p>
  </div>

  <div class="field">
    <p><%= form.label :住所 %>
    :<%= @order.address %></p>
    <%= form.hidden_field :address %>
  </div>
  <br>    
  <div class="actions">
    <%= form.submit '注文を確定する' %>
  </div>
<% end %>