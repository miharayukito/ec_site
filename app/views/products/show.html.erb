
<p style="color: green"><%= notice %></p>

<h2>商品詳細</h2>
<%= render @book %>

<strong>Status</strong>
<td><%= @book.status %></td>

<p>
  <strong>タグ</strong>
  <%= @book.tags.map(&:name).join(', ') %>
</p>

<% if @book.on_sale? %>
  <%= link_to "カートに入れる", line_items_path(book_id: @book.id), data:{"turbo-method": :post}, class: 'btn btn-default' %> </br>
<% elsif @book.sold_out? %>
  <strong>現在品切れ中です</strong></br>
<% end %>

<%= link_to "一覧に戻る", products_path %>