<p style="color: green"><%= notice %></p>

<h1>Books</h1>

<table style="width: 55%;">
  <thead>
    <tr>
      <th>Photo</th>
      <th>Title</th>
      <th>Author</th>
      <th>Published on</th>
      <th>Status</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @books.each do |book| %>
        <tr>
        <% if book.photo.attached? %>
          <td><%= image_tag book.thumbnail %></td>
        <% end %>
          <td><%= book.title %></td>          
          <td><%= book.author %></td>          
          <td><%= book.published_on %></td> 
          <td><%= book.status %></td>
          <td><%= book.price %></td>          
        
          <td><%= link_to "Show this book", product_path(book) %></td>
        </tr>
      <% end %>
  </tbody>
</table>
<br>
<% if session[:cart_id] %>
  <%= link_to 'カートを見る', cart_path(session[:cart_id]) %>
<% end %>