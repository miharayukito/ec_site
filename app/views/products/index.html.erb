<p style="color: green"><%= notice %></p>

<h1>Books</h1>

<table style="width: 60%;">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Published on</th>
      <th>Showing</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>          
          <td><%= book.author %></td>          
          <td><%= book.published_on %></td>          
          <td><%= book.showing %></td>          
          <td><%= book.price %></td>          
        
          <td><%= link_to "Show this book", product_path(book) %></td>
        </tr>
      <% end %>
  </tbody>
</table>
