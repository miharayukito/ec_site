<p style="color: green"><%= notice %></p>

<h1>Books</h1>

<div id="books">
  <% @books.each do |book| %>

    <p>
    <% if book.photo.attached? %>
    <%= image_tag book.thumbnail %>
    <% end %>
    </p>

    <%= render book %>
    
    <p>
    <strong>Status</strong>
    <%= book.status %>
    </p>
    <p>
      <%= link_to "Show this book", book %>
    </p>
  <% end %>
</div>

<%= link_to "New book", new_book_path %>
